@model MVC.PagedList<DBA.Model.Consult>
@using MVC


    <table class="tablelist">
    	<thead>
    	<tr>
        <th>序号<i class="sort"><img src="/Content/images/px.gif" /></i></th>
        <th>标题</th>
           
             <th>留言时间</th>
             <th>状态</th>
        <th>操作</th>
        </tr>
        </thead>
        <tbody>
              @if (Model != null && Model.Count > 0)
{
    int i = 0; 
       
            foreach (var item in Model)
        {
            i++;    
        <tr>
        <td>@i</td>
        <td>@item.Title</td>
            
             <td>@item.CreateTime</td>
            @if (item.State=="已回复")
            {
               <td>@item.State</td> 
            }
             else{
            <td style="color:red;">@item.State</td>
            }
        <td>
            @if (DBA.BLL.Users.GetNowUserType() == "管理员")
            {
              
             
            <a href="/Consult/RCreate?ID=@item.ID"   >回复</a> 
            }
            else
            {
            <a href="/Consult/RCreate?ID=@item.ID"   >查看</a> 
            }
            <a href="#" onclick="Del(@item.ID)"   >删除</a> 
           
        </td>
        </tr>    
            }
} 
        </tbody>
    </table>
    


    

