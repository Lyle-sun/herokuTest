@model DBA.Model.Apply
@{
    ViewBag.Title = "Create";
    Layout = null;
}


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>求职信息</title>
    <script src="../../Scripts/jquery-1.7.1.min.js"></script>
        <script src="@Url.Content("~/Scripts/kindeditor/kindeditor.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/kindeditor/lang/zh_CN.js")" type="text/javascript"></script>
<link href="/Content/css/style.css" rel="stylesheet" type="text/css" />
</head>

<body class="add_test_img"  >

	<div class="place">
    <span>位置：</span>
    <ul class="placeul">
    <li><a href="#">首页</a></li>
    <li><a href="#">预约体检</a></li>
    </ul>
    </div>
    
    <div class="formbody">
    
    <div class="formtitle"><span>预约体检</span></div>
    <form method="post" action="/Apply/Edit">
    <ul class="forminfo">
         <li><label>姓名</label>@Html.TextBoxFor(m => m.Name, new { @class = "dfinput" })</li>
           <li><label>性别</label><select name="Sex" id="selSex">
               <option value="">请选择</option>
               <option value="男">男</option>
               <option value="女">女</option>
                                  </select></li>
                  <li><label>年龄</label>@Html.TextBoxFor(m => m.Age, new { @class = "dfinput" })</li>
        <li><label>职业</label>@Html.TextBoxFor(m => m.CSHY, new { @class = "dfinput" })</li>
        <li><label>现居住地</label>@Html.TextBoxFor(m => m.JZD, new { @class = "dfinput" })</li>
          <li><label>身份证号</label>@Html.TextBoxFor(m => m.ZYJN, new { @class = "dfinput" })</li>
        <li><label>联系电话</label>@Html.TextBoxFor(m => m.QWGZ, new { @class = "dfinput" })</li>
          <li><label>预约时间</label>@Html.TextBoxFor(m => m.Str2, new { @class = "dfinput" })</li>
          <li><label>上传体检档案</label>@Html.TextAreaFor(m => m.Str3, new { style = "width:700px;height:300px" })</li>

        @Html.HiddenFor(m=>m.ID)
         @Html.HiddenFor(m=>m.Str1)
         <input type="hidden" name="Major" value="体检完成"/>
        @if (DBA.BLL.Users.GetNowUserType() == "管理员")
            {
            <li><label>&nbsp;</label><input name="" style="border:0;" type="submit" class="btn" value="上传"/></li>
        
        }
    </ul>
    </form>
    
    </div>

    
</body>

</html>
<script type="text/ecmascript">
    $(function () {
        if ('@Model.ID'!="0") {
            $("#selSex").val('@Model.Sex');

        }
        var editor;
        KindEditor.ready(function (K) {
            editor = K.create('#Str3',
            {
                uploadJson: '/Scripts/kindeditor/asp.net/upload_json.ashx',
                fileManagerJson: '/Scripts/kindeditor/asp.net/file_manager_json.ashx',
                allowFileManager: true
            });
        });
    });
    </script>

