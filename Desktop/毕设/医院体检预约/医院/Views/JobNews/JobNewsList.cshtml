@model MVC.PagedList<DBA.Model.JobNews>
@using MVC


    <table class="tablelist">
    	<thead>
    	<tr>
       
           <th>标题</th> 
            <th>栏目</th> 
         <th>发布时间</th> 
           
            
        <th>操作</th>
        </tr>
        </thead>
        <tbody>
              @if (Model != null && Model.Count > 0)
{
    int i = 0;
            foreach (var item in Model)
        {
            i++;    
        <tr>
      
            <td>@item.Title</td>
            <td>@item.Category</td>
             <td>@item.CreateName</td>
        <td><a href="/JobNews/Create?ID=@item.ID"   >修改</a> 
          <a href="#" onclick="Del(@item.ID)"   >删除</a> 
           
        </td>
        </tr>    
            }
} 
        </tbody>
    </table>
     <div class="pagination pagination-centered">
    	  @Html.Pager(Model, new PagerOptions { ShowFirstLast = false, PrevPageText = "上一页", NextPageText = "下一页", AlwaysShowFirstLastPageNumber = true }, "Paged", new { action = "JobNewsManage" })
    </div>


    

