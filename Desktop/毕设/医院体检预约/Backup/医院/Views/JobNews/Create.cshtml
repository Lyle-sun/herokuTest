@model DBA.Model.JobNews
@{
    ViewBag.Title = "Create";
    Layout = null;
}


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>信息发布</title>
    <script src="../../Scripts/jquery-1.7.1.min.js"></script>
        <script src="@Url.Content("~/Scripts/kindeditor/kindeditor.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/kindeditor/lang/zh_CN.js")" type="text/javascript"></script>
<link href="/Content/css/style.css" rel="stylesheet" type="text/css" />
</head>

<body class="add_test_img"  >

	
    
    <div class="formbody">
    
    <div class="formtitle"><span>信息发布</span></div>
    <form method="post" action="/JobNews/Edit">
    <ul class="forminfo">
         <li><label>标题</label>@Html.TextBoxFor(m => m.Title, new { @class = "dfinput" })</li>
           <li><label>信息栏目</label><select name="Category" id="selcategory">
               <option value="">请选择</option>
               <option value="医院概况">医院概况</option>
               <option value="医院动态">医院动态</option>
               <option value="医疗器械">医疗器械</option>
               <option value="医院环境">医院环境</option>
                <option value="医院荣誉">医院荣誉</option>
          <option value="操作说明">操作说明</option>
                                  </select></li>
          <li><label>信息内容</label>@Html.TextAreaFor(m => m.NewsContent, new { style = "width:700px;height:300px" })</li>

        @Html.HiddenFor(m=>m.ID)
        @Html.HiddenFor(m=>m.CreateName)
            <li><label>&nbsp;</label><input name="" style="border:1;" type="submit" value="确认保存"/></li>
        
    
    </ul>
    </form>
    
    </div>


</body>

</html>
<script type="text/ecmascript">
    $(function () {
        if ('@Model.ID'!="0") {
            $("#selcategory").val('@Model.Category');
        }
        var editor;
        KindEditor.ready(function (K) {
            editor = K.create('#NewsContent',
            {
                uploadJson: '/Scripts/kindeditor/asp.net/upload_json.ashx',
                fileManagerJson: '/Scripts/kindeditor/asp.net/file_manager_json.ashx',
                allowFileManager: true
            });
        });
    });
    </script>

