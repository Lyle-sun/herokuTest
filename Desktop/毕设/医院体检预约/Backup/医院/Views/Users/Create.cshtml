@model DBA.Model.Users
@{
    ViewBag.Title = "Create";
    Layout = null;
}


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title></title>
    <script src="../../Scripts/jquery-1.7.1.min.js"></script>
<link href="/Content/css/style.css" rel="stylesheet" type="text/css" />
</head>

<body class="add_test_img"  >

	
    
    <div class="formbody">
    
    <div class="formtitle"><span>添加管理员</span></div>
    <form method="post" action="/Users/Edit">
    <ul class="forminfo">
         <li><label>用户类型</label><select class="dfinput" id="selUserType" name="UserType">
         <option value="">请选择</option>
                <option value="管理员">管理员</option>
           
             </select>
             </li>
          <li><label>用户名/工号</label>@Html.TextBoxFor(m => m.UserName, new { @class = "dfinput" })</li>
        <li><label>密码</label>@Html.PasswordFor(m => m.UserPSD, new { @class = "dfinput" })</li>
        <li><label>部门</label>@Html.DropDownList("DepName")</li>
        <li><label>真实姓名</label>@Html.TextBoxFor(m => m.Str1, new { @class = "dfinput" })</li>
        <li><label>性别</label>@Html.TextBoxFor(m => m.Sex, new { @class = "dfinput" })</li>
        <li><label>年龄</label>@Html.TextBoxFor(m => m.Age, new { @class = "dfinput" })</li>
        <li><label>身份证号</label>@Html.TextBoxFor(m => m.UserSFZ, new { @class = "dfinput" })</li>
         <li><label>工作时间</label>@Html.TextBoxFor(m => m.BYSJ, new { @class = "dfinput" })</li>
        <li><label>籍贯</label>@Html.TextBoxFor(m => m.UserJG, new { @class = "dfinput" })</li>
        @Html.HiddenFor(m=>m.ID)
    <li><label>&nbsp;</label><input name="" style="border:0;" type="submit" class="btn" value="确认保存"/></li>
    </ul>
    </form>
    
    </div>


</body>

</html>
<script type="text/ecmascript">
    $(function () {
        if ('@Model.ID' != "0") {
            $("#DepName").val('@Model.DepName');
        }

    });
    </script>


