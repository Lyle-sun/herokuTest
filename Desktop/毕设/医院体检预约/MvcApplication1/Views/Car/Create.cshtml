@model DBA.Model.Car
@{
    ViewBag.Title = "Create";
    Layout = null;
}


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>车辆管理</title>
    <script src="../../Scripts/jquery-1.7.1.min.js"></script>
<link href="/Content/css/style.css" rel="stylesheet" type="text/css" />
</head>

<body class="add_test_img"  >

	<div class="place">
    <span>位置：</span>
    <ul class="placeul">
    <li><a href="#">首页</a></li>
    <li><a href="#">添加车辆</a></li>
    </ul>
    </div>
    
    <div class="formbody">
    
    <div class="formtitle"><span>添加车辆</span></div>
    <form method="post" action="/Car/Edit">
    <ul class="forminfo">
         <li><label>类别</label>@Html.DropDownList("CategoryID",null, new { @class = "dfinput" })</li>
          <li><label>制造公司</label>@Html.DropDownList("ComID",null, new { @class = "dfinput" })</li>
                  <li><label>汽车编号</label>@Html.TextBoxFor(m => m.CarNum, new { @class = "dfinput" })</li>
          <li><label>载客量</label>@Html.TextBoxFor(m => m.ZKL, new { @class = "dfinput" })</li>
          <li><label>箱数</label>@Html.TextBoxFor(m => m.XS, new { @class = "dfinput" })</li>
         <li><label>载重量</label>@Html.TextBoxFor(m => m.ZZL, new { @class = "dfinput" })</li>
                          <li><label>购买时间</label>@Html.TextBoxFor(m => m.GetTime, new { @class = "dfinput" })</li>
                          <li><label>基本维护费</label>@Html.TextBoxFor(m => m.JBWH, new { @class = "dfinput" })</li>
      
            <li><label>总公里数</label>@Html.TextBoxFor(m => m.Tkilometre, new { @class = "dfinput" })</li>
            <li><label>耗油量/公里</label>@Html.TextBoxFor(m => m.HYL, new { @class = "dfinput" })</li>
            <li><label>养路费</label>@Html.TextBoxFor(m => m.YLF, new { @class = "dfinput" })</li>
            <li><label>累计总费用</label>@Html.TextBoxFor(m => m.Tprice, new { @class = "dfinput" })</li>

        @Html.HiddenFor(m=>m.ID)
       
            <li><label>&nbsp;</label><input name="" style="border:0;" type="submit" class="btn" value="确认保存"/></li>
        
    
    </ul>
    </form>
    
    </div>


</body>

</html>


